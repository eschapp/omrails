<!DOCTYPE html>
<html>
    <head>
      <title>Omrails</title>
      <%= stylesheet_link_tag    "application", :media => "all" %>
      <%= javascript_include_tag "application" %>
      <%= csrf_meta_tags %>
    </head>
    <body>
	<%= render 'layouts/header' %>
        <div class="container">
            <% flash.each do |name, value| %>
              <%= content_tag(:div, value, class: "alert alert-#{name}") %>
            <% end %>
            <%= yield %>
	<%= render 'layouts/footer' %>
        </div>
    </body>
</html>
